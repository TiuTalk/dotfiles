# Antibody
if [ -f "$HOME/.zsh_plugins.sh" ]; then
  source ~/.zsh_plugins.sh
else
  echo "Installing antibody plugins..."
  antibody bundle < ~/.zsh_plugins.txt > ~/.zsh_plugins.sh
  source $HOME/.zsh_plugins.sh
fi

# ENV
export EDITOR=nvim

# Aliases
alias vi=vim
alias vim=nvim
alias chz=chezmoi

# Initialize prompt
eval "$(starship init zsh)"

# Initialize asdf
. /opt/asdf-vm/asdf.sh
